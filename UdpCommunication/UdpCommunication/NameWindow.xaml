<Window x:Class="UdpCommunication.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UdpCommunication"
        mc:Ignorable="d"
        Title="NameWindow" Height="100" Width="200" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None" ShowInTaskbar="False">
    <Grid>
        <Label x:Name="label_name" Content="请设置你的昵称:" Margin="5"/>
        <TextBox x:Name="text_name" Height="22" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,30"/>
        <Button x:Name="button_ok" Content="确定" HorizontalAlignment="Stretch" Margin="0,70,0,0" VerticalAlignment="Top" Width="75" Background="White" Click="button_ok_Click"/>
    </Grid>
</Window>
